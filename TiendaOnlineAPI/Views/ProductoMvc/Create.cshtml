@model TiendaOnlineAPI.Models.Producto

<h2>Agregar Producto</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="Nombre">Nombre</label>
        <input asp-for="Nombre" class="form-control" />
    </div>

    <div class="form-group">
        <label for="Descripcion">Descripción</label>
        <input asp-for="Descripcion" class="form-control" />
    </div>

    <div class="form-group">
        <label for="Precio">Precio</label>
        <input asp-for="Precio" class="form-control" type="number" step="0.01" />
    </div>

    <div class="form-group">
        <label for="UrlImagen">URL Imagen</label>
        <input asp-for="UrlImagen" class="form-control" />
    </div>

    <div class="form-group">
        <label for="CategoriaId">Categoría</label>
        <input asp-for="CategoriaId" class="form-control" type="number" />
    </div>

    <button type="submit" class="btn btn-success">Guardar</button>
</form>