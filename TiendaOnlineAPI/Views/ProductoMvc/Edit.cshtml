@model TiendaOnlineAPI.Models.Producto

<link rel="stylesheet" href="~/css/Forms.css" asp-append-version="true" />

<h2>Editar Producto</h2>
<div class="form-idea">
<form asp-action="Edit" asp-route-id="@Model.ProductoId" method="post">

    @Html.AntiForgeryToken()

    <input type="hidden" asp-for="ProductoId" />

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Nombre"></label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Descripcion"></label>
        <textarea asp-for="Descripcion" class="form-control"></textarea>
        <span asp-validation-for="Descripcion" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Precio"></label>
        <input asp-for="Precio" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="Precio" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="UrlImagen"></label>
        <input asp-for="UrlImagen" class="form-control" />
        <span asp-validation-for="UrlImagen" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CategoriaId"></label>
        <input asp-for="CategoriaId" class="form-control" type="number" />
        <span asp-validation-for="CategoriaId" class="text-danger"></span>
    </div>
 
    <button type="submit" class="btn btn-success mt-2">Guardar cambios</button>
    <a asp-action="Index" class="btn btn-secondary mt-2">Cancelar</a>
</form>
<form asp-controller="ProductoMvc" asp-action="Delete" asp-route-id="@Model.ProductoId" method="post" style="display:inline;">
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-danger mt-2">Eliminar</button>
</form>
</div>
